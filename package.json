{
  "name": "projeto-financeiro",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@9.0.0",
  "workspaces": [
    "apps/backend",
    "apps/mobile"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "backend:dev": "turbo run dev --filter=backend",
    "backend:check": "turbo run check:sqlite --filter=backend",
    "mobile:dev": "turbo run dev --filter=mobile",
    "mobile:start": "turbo run start --filter=mobile"
  },
  "devDependencies": {
    "turbo": "^2.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
